# Attempt to recursively make the various components of the distribution

default :
	@echo Type one of the following:
	@echo
	@echo         make all
	@echo         make clean

all :
	@echo Entering ros_demos directory.
	dir ros_demos
	cdir demos
	make -r
	dir ^
	@echo All done.

clean :
	wipe src-aux.o.* ~C ~V
	wipe ros_demos.o.* ~C ~V
	wipe ros_demos.demos.* ~C ~V
